---
replicaCount: 3
podAntiAffinityPreset: hard

proxy: edge

auth:
  adminUser: admin
  adminPassword: "{{ keycloak_admin_password }}"

service:
  type: ClusterIP

ingress:
  enabled: true
  ingressClassName: "nginx-public"
  hostname: {{ keycloak_hostname }}
  tls: true

postgresql:
  enabled: false

externalDatabase:
  host: "{{ keycloak_db_hostname }}"
  port: 5432
  user: "keycloak"
  database: "keycloak"
  password: {{ keycloak_db_password }}
