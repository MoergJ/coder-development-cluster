---
replicaCount: 2
podAntiAffinityPreset: soft

proxy: edge

auth:
  adminUser: admin
  adminPassword: "{{ keycloak_admin_password }}"

service:
  type: ClusterIP

resources:
  requests:
    cpu: 10m
    memory: 300Mi
  limits:
    cpu: 1000m
    memory: 1000Mi

ingress:
  enabled: true
  ingressClassName: "nginx-public"
  hostname: {{ keycloak_hostname }}
  tls: true

postgresql:
  enabled: false

externalDatabase:
  host: "{{ keycloak_db_hostname }}"
  port: 5432
  user: "keycloak"
  database: "keycloak"
  password: {{ keycloak_db_password }}
